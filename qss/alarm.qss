/*********************QSplitter******************/
QSplitter::handle {
    background-color:rgba(132,133,135,100%);
}

QSplitter::handle:horizontal {
    width: 3px;
}

QSplitter::handle:vertical {
    height: 3px;
}

QSplitter::handle:pressed {
    background-color:rgba(75,185,208,100%);
}
